generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./budgeting.db"
}

model daily_budget_history {
  date   String @id
  budget Float
  spend  Float  @default(0)
}

model expenditure_payments {
  id              Int    @id @unique(map: "sqlite_autoindex_expenditure_payments_1") @default(autoincrement())
  payment_date    String
  expenditure     String
  amount          Float
  amount_progress Float
  amount_due      Float
  due_date        String
}

model expenditures {
  id                Int     @id @unique(map: "sqlite_autoindex_expenditures_1") @default(autoincrement())
  expenditure       String
  type              String
  fixed             Boolean
  amount            Float?
  minimum           Float?
  maximum           Float?
  frequency         String
  frequency_value   String?
  from_credit       Boolean @default(false)
  payable_over_time Boolean @default(false)
}

model expenditures_history {
  id              Int     @id @unique(map: "sqlite_autoindex_expenditures_history_1") @default(autoincrement())
  expenditure     String
  type            String
  fixed           Boolean
  amount          Float?
  minimum         Float?
  maximum         Float?
  frequency       String
  frequency_value String?
  date_added      String
}

model income_payments {
  id              Int    @id @unique(map: "sqlite_autoindex_income_payments_1") @default(autoincrement())
  payment_date    String
  income          String
  amount          Float
  amount_progress Float
  amount_due      Float
  due_date        String
}

model incomes {
  id              Int     @id @unique(map: "sqlite_autoindex_incomes_1") @default(autoincrement())
  income          String
  type            String
  fixed           Boolean
  amount          Float?
  minimum         Float?
  maximum         Float?
  frequency       String
  frequency_value String?
}

model incomes_history {
  id              Int     @id @unique(map: "sqlite_autoindex_incomes_history_1") @default(autoincrement())
  income          String
  type            String
  fixed           Boolean
  amount          Float?
  minimum         Float?
  maximum         Float?
  frequency       String
  frequency_value String?
  date_added      String
}
